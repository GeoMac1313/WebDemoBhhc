@{
    ViewData["Title"] = "BHHC Demo";
}
@model IEnumerable<CleanArchitecture.Core.Entities.Reason>

<div class="row">
    <div class="col-md-9">
        <h2>Reasons to join Berkshire Hathaway Homestate Companies</h2>
        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Description</li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Language</h2>
        <form name="language" id="language" novalidate asp-route-id="value">
            <div class="control-group form-group">
                <div class="controls">
                    <select class="form-control" name="LanguageOption">
                        <option value="">English</option>
                        <option value="1">Spanish</option>
                        <option value="2">German</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-info" id="sendMessageButton">Translate</button>
        </form>
    </div>
</div>



